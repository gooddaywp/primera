{
    "name": "primera",
    "description": "A MVC started theme for WordPress using Laravel Blade templating.",
    "version": "1.0.0",
    "type": "project",
    "require": {
        "marcwiest/primera-package": "@dev",
        "php": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "repositories": {
        "dev-package": {
            "type": "path",
            "url": "~/code/primera-package",
            "options": {
                "symlink": true
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
