{
    "name": "gooddaywp/primera",
    "type": "project",
    "description": "A MVC starter theme for WordPress using Laravel's Blade templating engine.",
    "require": {
        "php": ">=7.3",
        "gooddaywp/primera-lib": "@dev"
    },
    "repositories": {
        "dev-package": {
            "type": "path",
            "url": "~/code/primera-lib",
            "options": {
                "symlink": true
            }
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@npm-install"
        ],
        "npm-install": [
            "npm install"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
